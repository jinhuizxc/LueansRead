        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
        //  loading 动画的颜色
        <!--  打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/blue_primary_dark</item>
        <!-- switch关闭时的拇指按钮的颜色 -->
        <!--<item name="colorSwitchThumbNormal">@color/colorAccent</item>-->
        <!-- switch关闭时的轨迹的颜色  30%这个颜色 -->
        <!--<item name="android:colorForeground">@color/blue_primary</item>-->
    </style>

