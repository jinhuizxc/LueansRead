<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.lueans.lueansread.ui.activity.AboutAppActivity"
    tools:showIn="@layout/activity_about_app">


    <LinearLayout
        android:id="@+id/content_about_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="96dip"
            android:layout_height="96dip"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:text="1.0版本" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="#fff"
            android:elevation="5dip"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:text="「简阅」Android.APP"
                android:textSize="@dimen/item_title_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每天分享几篇IT干货，不定时的分享妹纸图片，还有每天的时事新闻"
                android:textSize="@dimen/item_text_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="#fff"
            android:elevation="5dip"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:text="特别鸣谢"
                android:textSize="@dimen/item_title_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="感谢Gank平台提供的接口\n感谢hugeterry的趣刻App"
                android:textSize="@dimen/item_text_textsize" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="#fff"
            android:elevation="5dip"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:text="版权声明"
                android:textSize="@dimen/item_title_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片和新闻数据来自网络。版权归360和网易所有，如有侵权，请告知，我们会做出下架处理"
                android:textSize="@dimen/item_text_textsize" />
        </LinearLayout>


        <TextView
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:text="开发者Lueans"
            android:textSize="@dimen/item_title_textsize" />

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://lueans.github.io"
            android:textSize="@dimen/item_text_textsize" />


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
